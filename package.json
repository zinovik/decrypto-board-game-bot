{
    "name": "decrypto-board-game-bot",
    "version": "0.1.0",
    "description": "simple telegram bot",
    "main": "index.js",
    "engines": {
        "node": ">=18.0",
        "npm": ">=8.0"
    },
    "scripts": {
        "test": "jest --config jestconfig.json --coverage",
        "build": "rm -rf dist && tsc",
        "dev": "npm run build && GOOGLE_APPLICATION_CREDENTIALS=key-file.json env-cmd npx @google-cloud/functions-framework --target=main --source=dist",
        "deploy": "npm run build && cp package*.json dist && gcloud functions deploy decrypto-board-game-bot --gen2 --trigger-http --runtime nodejs20 --entry-point=main --allow-unauthenticated --region=europe-central2 --source=dist --update-build-env-vars=\"GOOGLE_NODE_RUN_SCRIPTS=\" --project zinovik-project --set-secrets=TELEGRAM_TOKEN=decrypto-board-game-bot-telegram-token:latest,TOKEN=decrypto-board-game-bot-app-token:latest"
    },
    "dependencies": {
        "@google-cloud/functions-framework": "3.3.0",
        "axios": "1.6.3"
    },
    "devDependencies": {
        "@types/jest": "29.5.11",
        "env-cmd": "10.1.0",
        "jest": "29.7.0",
        "ts-jest": "29.1.1",
        "typemoq": "2.1.0",
        "typescript": "5.3.3"
    },
    "author": "Max Zinovik",
    "license": "Apache-2.0",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/zinovik/decrypto-board-game-bot.git"
    },
    "bugs": {
        "url": "https://github.com/zinovik/decrypto-board-game-bot/issues"
    },
    "homepage": "https://github.com/zinovik/decrypto-board-game-bot#readme"
}
